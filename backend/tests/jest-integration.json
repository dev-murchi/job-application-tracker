{
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "controllers/**/*.js",
    "!controllers/index.js",
    "services/**/*.js",
    "!services/index.js",
    "middleware/**/*.js",
    "!middleware/rate-limiter.js",
    "!middleware/index.js",
    "routes/**/*.js",
    "!routes/index.js",
    "utils/**/*.js",
    "!utils/logger.js",
    "!**/node_modules/**",
    "!**/tests/**",
    "!**/coverage/**"
  ],
  "coverageDirectory": "coverage/integration",
  "coverageReporters": ["text", "lcov", "html"],
  "coverageThreshold": {
    "global": {
      "branches": 85,
      "functions": 89,
      "lines": 90,
      "statements": 90
    }
  },
  "testMatch": ["<rootDir>/tests/integration/**/*.integration.test.js"],
  "clearMocks": true,
  "rootDir": "../",
  "modulePaths": ["<rootDir>"],
  "setupFilesAfterEnv": ["<rootDir>/tests/jest-integration-setup.js"],
  "testTimeout": 30000,
  "maxWorkers": "50%"
}
