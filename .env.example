# Application
SERVER_NODE_ENV=development
SERVER_PORT=3001

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme_in_production
MONGO_DATABASE=job-tracker
MONGO_URL=mongodb://admin:changeme_in_production@mongodb:27017/job-tracker?authSource=admin

# JWT Configuration
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_LIFETIME=30d

# CORS Configuration
# Development: http://localhost:4200
# Production: https://yourdomain.com
CORS_ORIGIN=http://localhost:4200

# Optional: API Rate Limiting (requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Logging Level (error, warn, info, http, debug)
LOG_LEVEL=info
